<Window x:Class="BeautyApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BeautyApplication - Login"
        Height="350" Width="400"
        Background="#FFF5F5F5"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Border Background="White" CornerRadius="12" Padding="20" Margin="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="BeautyApplication"
                           FontSize="24"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Foreground="#171738"
                           Margin="0,0,0,20"/>

                <StackPanel Grid.Row="1" Margin="0,0,0,10">
                    <TextBlock Text="Email" FontWeight="SemiBold" Foreground="#444" Margin="0,0,0,5"/>
                    <TextBox x:Name="EmailTextBox"
                             Height="35"
                             Padding="8"
                             Background="#FFF"
                             BorderBrush="#CCC"
                             Text="client@example.com"/>
                </StackPanel>

                <StackPanel Grid.Row="2" Margin="0,0,0,10">
                    <TextBlock Text="Password" FontWeight="SemiBold" Foreground="#444" Margin="0,0,0,5"/>
                    <PasswordBox x:Name="PasswordBox"
                                 Height="35"
                                 Padding="8"
                                 Background="#FFF"
                                 BorderBrush="#CCC"/>
                </StackPanel>

                <Button Grid.Row="3"
                        Content="Login"
                        Width="120"
                        Height="40"
                        Background="#171738"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderThickness="0"
                        HorizontalAlignment="Center"
                        Cursor="Hand"
                        Click="LoginButton_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>
