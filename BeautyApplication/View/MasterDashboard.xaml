<Window x:Class="BeautyApplication.Views.MasterDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Master - BeautyApplication"
        Height="600"
        Width="900"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">
    <Grid>
        <!-- Background -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FFEC8F9C" Offset="0"/>
                <GradientStop Color="#FFD7A4B0" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Close Button -->
        <Button Content="X"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="10"
                Width="30"
                Height="30"
                Background="Transparent"
                Foreground="White"
                FontWeight="Bold"
                BorderThickness="0"
                Click="CloseButton_Click"/>

        <!-- Main Content Card -->
        <Border Background="#22FFFFFF"
                Margin="30"
                CornerRadius="20"
                Opacity="0.95"
                Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Master's Schedule"
                           FontSize="26"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <StackPanel Grid.Row="1">
                    <ListView x:Name="AppointmentsListView"
                              Height="400"
                              Background="#FAFAFA"
                              BorderBrush="#DDD"
                              BorderThickness="1"
                              Padding="5"
                              MinWidth="600">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Client" DisplayMemberBinding="{Binding User.Name}" Width="150"/>
                                <GridViewColumn Header="Service" DisplayMemberBinding="{Binding Service.Name}" Width="150"/>
                                <GridViewColumn Header="Time" DisplayMemberBinding="{Binding AppointmentTime}" Width="180"/>
                                <GridViewColumn Header="Status" DisplayMemberBinding="{Binding Status}" Width="100"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
