<Window x:Class="BeautyApplication.Views.MasterDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Master - BeautyApplication" Height="500" Width="700" Background="#FFF5F5F5" WindowStartupLocation="CenterScreen">
    <Grid>
        <Border Background="White" CornerRadius="12" Padding="20" Margin="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Master's Schedule" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="#171738" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,20"/>

                <StackPanel Grid.Row="1" VerticalAlignment="Top">

                    

                    <ListView x:Name="AppointmentsListView" 
                              Background="#FAFAFA" 
                              BorderBrush="#DDD"
                              BorderThickness="1" 
                              Padding="5" 
                              Height="350"
                              MinWidth="600">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Client" DisplayMemberBinding="{Binding User.Name}" Width="150"/>
                                <GridViewColumn Header="Service" DisplayMemberBinding="{Binding Service.Name}" Width="150"/>
                                <GridViewColumn Header="Time" DisplayMemberBinding="{Binding AppointmentTime}" Width="180"/>
                                <GridViewColumn Header="Status" DisplayMemberBinding="{Binding Status}" Width="100"/>
                            </GridView>
                        </ListView.View>
                    </ListView>

                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
